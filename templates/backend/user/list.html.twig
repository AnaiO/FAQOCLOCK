{% extends 'base.html.twig' %}

{% block title %}Admin Users{% endblock %}

{% block body %}


<table class="table">
        <thead>
            <tr>
                <th>Liste des Utilisateurs</th>
                <th>Droits</th>
            </tr>
        </thead>
        <tbody>


        {% for user in users %}
            <tr>
                <td>
                     {{ user.firstname }} {{ user.lastname }}
                </td>
                <td>
                    {{ user.role.name }}
            
                </td>  
                <td>
                    <a href="{{ path('backend_users_role', {"id" : user.id }) }}">
                                <i class="fa fa-plus-circle"></i> Modifier
                    </a>
                </td>  
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun utilisateur en base de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
</table>

{% endblock %}