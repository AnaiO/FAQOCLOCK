{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
   
    <div> 
        <div class="profile--section">
            <table class="table">
                 <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th><a href="{{ path("profile_edit")}}"><button>Editer le profil</button></a></th>
                    </tr>
                </thead>
                 <tbody>
                        
                    <tr>
                        <td>
                            {{ app.user.lastname }}
                        </td>
                        <td>
                            {{ app.user.firstname }}   
                        </td>
                        <td>
                            {{ app.user.email }}       
                        </td>
                    </tr>
                        
                </tbody>
            </table>
        </div>
   


    <div class="d-flex justify-content-between profile--section">
    <table class="table">
            <thead>
                <tr>
                    <th>Mes questions</th>
                </tr>
            </thead>
            <tbody>
            {% for question in app.user.questions %}
                <tr>
                    <td>
                        <a href="{{ path('question_show', {'id': question.id}) }}">
                         {{ question.title }}
                        </a>
                    </td>
                  
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Vous n'avez pas encore posé de question</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <table class="table">
                <thead>
                    <tr>
                        <th>Mes réponses</th>
                    </tr>
                </thead>
                <tbody>
                {% for answer in app.user.answers %}
                    <tr>
                        <td>
                            <a href="{{ path('question_show', {'id': answer.question.id}) }}">
                             {{ answer.content }}
                            </a>
                        </td>
                      
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Vous n'avez répondu à aucune question</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div> 
</div>
{% endblock %}
