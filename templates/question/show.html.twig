{% extends 'base.html.twig' %}



{% block sidebar %}
        <div class="col-2" id="sidebar">
            <h3>
                Tags
            </h3>
                
            {% for tag in question.tags %}
                <div class="container pt-2">
                    <a href="{{ path('questions_tag', {"name": tag.name }) }}"><button type="button" class="btn btn-outline-warning">{{ tag.name }}</button></a>
                </div>
            {% endfor %}
        </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        
            <div class=" text-white bg-dark mb-3" style="margin: 1rem auto; max-width: 80%;">
                    <div class="card-header d-flex justify-content-between">
                        <h4 class="card-title">{{ question.title }}</h4>
                        <span>{{ question.updatedAt|date("d/m/Y H:i", "Europe/Paris") }}</span></div>
                    <div class="card-body">
                        <p class="card-text">{{ question.user.firstname }} {{ question.user.lastname }}</p>
                        <p class="card-text">{{ question.content }}</p>
                    </div>
        </div>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div>
            {% include 'answer/_form.html.twig' %}
        </div>
        {% endif %}
        
        {% for answer in answers %}
        {% if answer.status %}
            <div class="container">
                <div class="card {% if answer.status == 2 %}
                                        valid
                                        {% endif %}">
                     <div class="card-header d-flex justify-content-between">
                            <div>{{ answer.user.firstname }} {{ answer.user.lastname }}</div> 
                            <div>

                                {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id is same as(question.user.id) %}

                                {% if answer.status is not same as(2) %}
                                <a href="{{ path('answer_validate', {"id": answer.id })}}">
                                <button>Valider la r√©ponse</button>
                                </a>
                                {% else %}
                                <a href="{{ path('answer_novalidate', {"id": answer.id })}}">
                                <button>Annuler</button>
                                </a>
                                {% endif %}

                                {% endif %}

                                
                            </div> 
                    </div>
                     <div class="card-body">
                         <blockquote class="blockquote mb-0">
                         <p>{{ answer.content }}</p>
                         <footer class="blockquote-footer d-flex justify-content-end">{{ answer.updatedAt|date("d/m/Y H:i", "Europe/Paris")}}</footer>
                         </blockquote>
                     </div>
                </div>    
            </div>
        {% endif %}
        {% endfor %}
    </div>

{% endblock %}
